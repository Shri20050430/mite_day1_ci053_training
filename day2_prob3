#include<stdio.h>
void inputMarks(int *marks,int n){
    printf("enter marks:");
    for(int i=0;i<n;i++){
            printf("%d",&marks[i]);
    }
}
float calculateAverage(int *marks,int n){
    int sum=0;
    for(int i=0;i<n;i++){
       sum+=marks[i];
    }
    float avg = (float)sum /(float)n;
    return avg;
}
int main(){
    int n;
    int marks[1000];
    printf("enter number of subjects:");
    scanf("%d",&n);
    inputMarks(marks,n);
    float avg = calculateAverage(marks,n);
    printf("Average marks:%.2f",avg);
    return 0;
}
